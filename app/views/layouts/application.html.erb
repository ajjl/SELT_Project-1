<!DOCTYPE html>
<html>
<head>
  <title>SELTProject</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Spotitude</a>
    <!--<ul class="nav navbar-nav">-->
      <!--<li class="nav-item">-->
        <!--<a class="nav-link" href="">About</a>-->
      <!--</li>-->
      <!--<li class="nav-item">-->
        <!--<a class="nav-link" href="">Link</a>-->
      <!--</li>-->
    <!--</ul>-->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if @current_user %>
            <li>
              <form class="navbar-form" action="/signout" method="GET">
                <button class="btn btn-default" type="submit">Sign out here!</button>
              </form>
            </li>
            <li>
              <form class="navbar-form" action="/users/settings" method="GET">
                <button class="btn btn-default" type="submit">Settings</button>
              </form>
            </li>
        <% else %>
            <li>
              <form class="navbar-form" action="/auth/spotify" method="GET">
                <button class="btn btn-default" type="submit" id="loginbutton">Login With Spotify!</button>
              </form>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="container spotitude-heading">
  <div class="row">
    <div class="col-lg-12">
      <h1>Spotitude</h1>
      <h1><small> Spotitude combines your Spotify and YouTube music experience</small></h1>
    </div>

  </div>
  <div class="row">
    <div class="spinner">
      <div class="double-bounce1"></div>
      <div class="double-bounce2"></div>
    </div>
  </div>
</div>

</body>
<%= yield %>
</html>
