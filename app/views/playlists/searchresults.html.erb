<div class="container">
    <div class="row">
    <form action= "/playlists/searchresults" method="get">
      <input type="text" name="search" class="form-control home_search" placeholder="song, artist, album..", autocomplete="off"><br>
      <p>
        <input type= "submit" class= "btn btn-lg btn-success" value= "search!">
      </p>
    </form>
    <div class="col-md-12">
      <% if @current_user.respond_to?(:uid) %>
        <h1>Here are your search results from your playlists: </h1>
                <div class="container">
                  <div class="row">
                    <div class="col-md-4">
                      <% @search_results.each do |playlist| %>
                          <h3 class="playlist-name"><%= playlist.name %></h3>
                      <% end %>
                    </div>
                  </div>
                </div>
      <% else %>
          <h1 id="login-message">Login to view your playlists</h1>
      <% end %>
    </div>
  </div>
</div>
